<h1>Restaurants</h1>
<p>Find a restaurant</p>

<ul class="list-group">
  <% @restaurants.each do |restaurant|%>
    <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-action">
      <%= link_to "#{restaurant.name}", restaurant_path(restaurant.id), class:"text-decoration-none" %>
    </li>
  <% end %>
</ul>

 <%= link_to "Add a new restaurant?", new_restaurant_path, class: "btn btn-primary mt-4" %>
